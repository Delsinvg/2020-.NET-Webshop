@model project.models.Categories.PostCategoryModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h1>Create</h1>

    <h4>PostCategoryModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ParentId" class="control-label">Category</label>
                    <select asp-for="ParentId" asp-items="@(new SelectList(ViewBag.Categories, nameof(ViewBag.Category.Id), nameof(ViewBag.Category.Name)))" class="form-control" onchange="SetDept() required">
                    </select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>