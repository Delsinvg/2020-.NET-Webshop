@model project.models.Users.ResetPasswordModel

@{
    ViewData["Title"] = Localizer["Wijzig wachtwoord"];
    string id = HttpContextAccessor.HttpContext.Request.Query["userId"];
    string code = HttpContextAccessor.HttpContext.Request.Query["code"];
}

<div class="container">

    <h4>@Localizer["Wat is je nieuwe wachtwoord?"]</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CheckNewPassword" asp-route-userId=@id asp-route-code=@code>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Wijzig wachtwoord"]" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
