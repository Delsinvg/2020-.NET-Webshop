

@model project.models.Users.PostUserModel

@{ ViewData["Title"] = "Registreren"; }

<div class="container">
    <form class="form-signin" asp-action="Index">
        <h1 class="h4 mb-3 font-weight-normal">Registreer je nu!</h1>
        @if (TempData.ContainsKey("ApiError"))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ApiError"]
            </div>
         }

        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Voornaam</label>
            <input asp-for="FirstName" id="Voornaam" class="form-control" placeholder="Voornaam" autofocus>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Familienaam</label>
            <input asp-for="LastName" id="Familienaam" class="form-control" placeholder="Familienaam">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CountryCode" class="control-label"></label>
            <input asp-for="CountryCode" class="form-control" />
            <span asp-validation-for="CountryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PostalCode" class="control-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="sr-only">E-mailadres</label>
            <input asp-for="Email" id="Email" class="form-control" placeholder="E-mailadres">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only">Wachtwoord</label>
            <input asp-for="Password" type="password" id="Password" class="form-control" placeholder="Wachtwoord">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group remember-me">
            <label>
                <input type="checkbox" name="rememberMe"> Onthoud mij
            </label>
        </div>
        <button class="btn btn-lg btn-outline-primary btn-block" type="submit">Registreer</button>
        <a class="btn btn-lg btn-outline-info btn-block" asp-area="" asp-controller="Authentication" asp-action="Index">Aanmelden</a>
    </form>


</div>

